{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Socialtokens list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Accessforuserid</th>
                <th>Accessto</th>
                <th>Token</th>
                <th>Expiresat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('socialtokens_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.accessForUserId }}</td>
                <td>{{ entity.accessTo }}</td>
                <td>{{ entity.token }}</td>
                <td>{% if entity.expiresAt %}{{ entity.expiresAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('socialtokens_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
